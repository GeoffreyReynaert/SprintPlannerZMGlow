@using SprintPlannerZM.Model
@model IList<SprintPlannerZM.Model.Klas>
@{
    int leerlingencount = 0;
}
<head>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <link href="~/css/bootstrap-extensions.css" rel="stylesheet" asp-append-version="true" />
    <script src="~/js/site.js"></script>
</head>
<br />
<div class="pt-3">
    <div class="containerDropdowns left-allignToNav">
        <form>
            <select class="form-control select2 textBoxLayout">
                @foreach (var klas in Model)
                {
                    <option>
                        @klas.klasnaam
                    </option>
                }
            </select>
        </form>
        <form>
            <select class="form-control select2 textBoxLayout">
                @foreach (var klas in Model)
                {
                    @foreach (var leerling in klas.Leerlingen)
                    {
                        <option>
                            @leerling.familieNaam @leerling.voorNaam
                        </option>
                        leerlingencount++;
                    }
                }
            </select>
        </form>
    </div>
</div>

<section class="left-allignToNav pt-3">
    <div class="tbl-header">
        <table>
            <thead>
                <tr>
                    <!--class h6 om zo via bootstrap title ook responsive maken-->
                    <th class="h6">Leerling ondersteuning keuze</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">

        @foreach (var klas in Model)
        {
            foreach (var leerling in klas.Leerlingen)
            {
                <form method="post">
                    <div class="trBordercolor container">
                        <partial name="PartialLeerlingenOverzicht" model=leerling />
                    </div>
                </form>
            }
        }

    </div>
</section>
<div class="containerDropdowns left-allignToNav tableFixFooter">Totaal:@leerlingencount</div>

<script>
    $('.select2').select2();
</script>

@section Scripts
{
    <script src="js/site.js" asp-append-version="true"></script>
}




