@model SprintPlannerZM.Model.Klas


<section class="left-allignToNav pt-3">
    <div class="tbl-header">
        <table>
            <thead>
                <tr>
                    <th class="h6">Klas Overzicht @Model.klasnaam </th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-introduction">
        <div class="trBordercolor container">
            <div class="">
                <div class="pt-1">
                    Intern Klas nummer: @Model.klasID
                    <br />Klas Titularis: @Model.Leerkracht.achternaam @Model.Leerkracht.voornaam
                    <br />Stamboeknummer: @Model.titularisID
                    <br />Aantal leerlingen @Model.Leerlingen.Count
                    <br />
                </div>
            </div>
        </div>
    </div>
    <div class="tbl-header">
        <table>
            <thead>
                <tr>
                    <th class="h6">@Model.klasnaam  heeft volgende vakken</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <div class="trBordercolor container">
            <div class="">
                <div class="pt-2">
                    @foreach (var vak in @Model.Vakken)
                    {
                        <span> vak @vak.vaknaam met leerkracht @vak.Leerkracht.achternaam</span>
                        <br />
                    }
                    <br />
                </div>
            </div>
        </div>
    </div>
    <div class="tbl-header">
        <table>
            <thead>
                <tr>
                    <th class="h6"> @Model.klasnaam heeft volgende leerlingen</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <div class="trBordercolor container">
            <div class="">
                <div class="pt-2">
                    @foreach (var leerling in @Model.Leerlingen)
                    {
                        <span>
                            leerling @leerling.familieNaam @leerling.voorNaam
                            @if (@leerling.hulpleerlingID == null)
                            {<b>     geen hulpleerling</b>
                            }
                            else
                            {
                                <b>      is een hulpleerling met id @leerling.hulpleerlingID</b>
                            }
                        </span>
                        <br />
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<div class="containerDropdowns left-allignToNav tableFixFooter pb-5 mb-5"></div>

