@model IEnumerable<SprintPlannerZM.Model.Leerling>

@{
    ViewData["Title"] = "TesterNamePaging";
}

<h2>Index</h2>

<p>
    <a asp-action="">Create New</a>
</p>

<form asp-action="TesterNamePaging" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["nameFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="TesterNamePaging">Back to Full List</a>
        </p>
    </div>
</form>
<form asp-action="TesterNamePaging" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="Search2String" value="@ViewData["klasFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="TesterNamePaging">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="TesterNamePaging" asp-route-sortOrder="@ViewData["NameSortParm"]"asp-route-currentFilter="@ViewData["CurrentFilter"]">Familienaam</a>
            </th>
            <th>
                Voornaam
            </th>
            <th>
                <a asp-action="TesterNamePaging" asp-route-sortOrder="@ViewData["KlasSortParm"]"asp-route-currentFilter="@ViewData["CurrentFilter"]">Klas naam</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.familieNaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.voorNaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Klas.klasnaam)
                </td>
                <td>
                    <a asp-action="" asp-route-id="@item.leerlingID">Edit</a> |
                    <a asp-action="" asp-route-id="@item.leerlingID">Details</a> |
                    <a asp-action="" asp-route-id="@item.leerlingID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

