@model IList<SprintPlannerZM.Model.Lokaal>

<section>
    <div class="text-white">
        <div class="containerFlex">
            @foreach (var lokaal in @Model)
            {
                <div class=" card text-black-50 p-1 m-2" style="width: 14rem;">
                    <div class="card-header">
                        @lokaal.lokaalnaam
                    </div>
                    <div class="card-body text-black-50">
                        <span> afk. naam: @lokaal.naamafkorting</span><br>
                        <span> sprint lokaal: @lokaal.sprintlokaal</span><br>
                    </div>
                    <div class="card-footer">
                        <a type="button" id="wijzigLeerling" name="@lokaal.lokaalID" class="btn btn-success float-right" asp-action="LokaalEdit" asp-route-id="@lokaal.lokaalID">Wijzig</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>