@model SprintPlannerZM.Model.Lokaal

<form method="post">
    <div class="mngmnt-background-div p-3">
        <div class="form-group">
            <label asp-for="@Model.lokaalnaam"></label>
            <input asp-for="@Model.lokaalnaam" class="form-control" />
            <span asp-validation-for="@Model.lokaalnaam"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.naamafkorting"></label>
            <input asp-for="@Model.naamafkorting" class="form-control" />
            <span asp-validation-for="@Model.naamafkorting"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.sprintlokaal"></label>
            <input type="checkbox" asp-for="@Model.sprintlokaal" class="form-control" />
            <span asp-validation-for="@Model.sprintlokaal"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.capaciteit"></label>
            <input asp-for="@Model.capaciteit" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.lokaaltype"></label>
            <select asp-for="@Model.lokaaltype" class="form-control">
                <option value="sprint">sprint</option>
                <option value="typer">typer</option>
                <option value="m-klas">m-klas</option>
            </select>
            <span asp-validation-for="@Model.lokaaltype"></span><br />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>