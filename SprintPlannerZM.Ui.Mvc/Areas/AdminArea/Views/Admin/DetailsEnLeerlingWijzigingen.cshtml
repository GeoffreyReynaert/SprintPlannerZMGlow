@model IList<SprintPlannerZM.Ui.Mvc.Models.LeerlingVerdelingWijzegingsModel>


@{
    var sprintReservaties = Model[0].sprintlokaalreservaties;



    var toezichterID = Model[0].leerlingeverdeling.sprintlokaalreservatieID;

    var toezichterLijst = Model[0].sprintlokaalreservaties.Select(a =>
        new
        {
            sprintlokaalreservatieID = a.sprintlokaalreservatieID,
            Name = $"{a.Lokaal.lokaalnaam}"
        }
        );

    var toezichters = new SelectList(toezichterLijst, "sprintlokaalreservatieID", "Name", toezichterID);
}

<section class="left-allignToNav pt-3">
    <div class="tbl-header">
        <table>
            <thead>
                <tr>
                    <th class="h6">Lokaal verdeling Overzicht @Model[0].leerlingeverdeling.Sprintlokaalreservatie.Lokaal.lokaalnaam </th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <div class="trBordercolor container">
            <div class="">
                <div class="pt-2">
                    @foreach (var leerlingverdeling in Model)
                    {
                        <span>
                            leerling :@leerlingverdeling.leerlingeverdeling.Hulpleerling.Leerling.familieNaam @leerlingverdeling.leerlingeverdeling.Hulpleerling.Leerling.voorNaam <br />
                            klas @leerlingverdeling.leerlingeverdeling.Hulpleerling.Leerling.Klas.klasnaam <br />
                            vak @leerlingverdeling.leerlingeverdeling.Examenrooster.Vak.vaknaam <br />
                        </span>
                        <br />
                        <div class="left-allignToNav">
                            <form method="post">
                                <div class="p-3">
                                    <input type="hidden" asp-for="@leerlingverdeling.leerlingeverdeling.leerlingverdelingID" />
                                    <input type="hidden" asp-for="@leerlingverdeling.leerlingeverdeling.hulpleerlingID"/>
                                    <input type="hidden" asp-for="@leerlingverdeling.leerlingeverdeling.examenID"/>
                                    <input type="hidden" asp-for="@leerlingverdeling.leerlingeverdeling.reservatietype"/>
                                    <div class="form-group">
                                        <label asp-for="@leerlingverdeling.leerlingeverdeling.sprintlokaalreservatieID">Lokaal</label>
                                        <select asp-for="@leerlingverdeling.leerlingeverdeling.sprintlokaalreservatieID" asp-items="@toezichters" class="form-control">
                                            <option>Please select an toezichter</option>
                                        </select>
                                        <span asp-validation-for="@leerlingverdeling.leerlingeverdeling.sprintlokaalreservatieID"></span>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary" >Save</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<div class="containerDropdowns left-allignToNav tableFixFooter pb-5 mb-5"></div>

