@model SprintPlannerZM.Model.Leerkracht
<div class="tbl-content">
    <table>
        <tbody>
        <section>
            <div class="">
                <div class="containerLeerkrachten">
                    <div class=" card p-1 m-2" style="width: 15rem;">
                            <div>
                                @Model.achternaam @Model.voornaam
                                <label class="switch float-right">
                                    <input id="chboxLeerkracht" value="@Model.leerkrachtID" type="checkbox" @(Convert.ToBoolean(@Model.sprintToezichter) == true ? "checked='checked'" : string.Empty)>
                                    <span class="slider round"></span>
                                </label>
                            </div>
                        </div>
                </div>
            </div>
        </section>
        </tbody>
    </table>
</div>
<div class="containerDropdowns tableFixFooter">Totaal: 1</div>

<script>
    $('#chboxLeerkracht').change(function () {
        $.ajax({
            type: "POST",
            url: `UpdateToezichter`,
            data: { "leerkrachtID": $(this).val() }
        });
    });
</script>
