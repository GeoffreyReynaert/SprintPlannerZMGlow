@model SprintPlannerZM.Model.PaginatedList<SprintPlannerZM.Model.Leerling>

@{
    ViewData["Title"] = "LeerlingenOverzicht";
}

<head>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <link href="~/css/bootstrap-extensions.css" rel="stylesheet" asp-append-version="true" />
</head>

@{
    var count = 0;
}

<form asp-action="LeerlingenOverzicht" method="get">
    <div class="left-allignToNav pt-3">
        <p>
            <input type="text" name="nameString" value="@ViewData["NameFilter"]" placeholder="Zoek op naam" />
            <input type="submit" value="Zoek" class="btn btn-primary mt-md-n2"  />
        </p>
    </div>
</form>
<form asp-action="LeerlingenOverzicht" method="get">
    <div class="left-allignToNav">
        <p>
            <input type="text" name="klasString" value="@ViewData["KlasFilter"]" placeholder="Zoek op klas" />
            <input type="submit" value="Zoek" class="btn btn-primary mt-md-n2" />
            <a asp-action="LeerlingenOverzicht" class="text-white btn btn-primary mt-md-n2">Toon Volledige lijst</a>
        </p>
    </div>
</form>
@using (Html.BeginForm("LeerlingUpdate", "Admin", FormMethod.Get))
{
    <section class="left-allignToNav pt-3">
        <body>
            <div class="tbl-header">
                <table>
                    <thead>
                        <tr>
                            <th class="h6"><a asp-action="LeerlingenOverzicht" asp-route-sortOrder="@ViewData["FamilienaamSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="text-white">Familienaam</a></th>
                            <th class="h6"><a asp-action="LeerlingenOverzicht" asp-route-sortOrder="@ViewData["VoornaamSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="text-white">Voornaam</a></th>
                            <th class="h6"><a asp-action="LeerlingenOverzicht" asp-route-sortOrder="@ViewData["KlasnaamSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="text-white">Klas</a></th>
                            <th class="h6">Sprint</th>
                            <th class="h6">Typer</th>
                            <th class="h6">Mklas</th>
                            <th class="h6">Vakken Sprintkeuze</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tbl-content">
                <div class="container">
                    <div class="">
                        <table>
                            @for (var i = 0; i < @Model.Count; i++)
                            {
                                count++;
                            <tr class="trBordercolor">
                                <input asp-for="@Model[i].leerlingID" type="hidden" />
                                <input asp-for="@Model[i].email" type="hidden" />
                                <input asp-for="@Model[i].KlasID" type="hidden" />
                                <input asp-for="@Model[i].hulpleerlingID" type="hidden" />
                                <input asp-for="@Model[i].KlasID" type="hidden" />
                                <td class="text-left">@Html.DisplayFor(model => Model[i].familieNaam)</td>
                                <td class="text-left p-lg-2">@Html.DisplayFor(model => Model[i].voorNaam)</td>
                                <td>@Html.DisplayFor(model => Model[i].Klas.klasnaam)</td>

                                <td>
                                    <input asp-for="@Model[i].sprinter" type="checkbox" class="form-control" />
                                </td>
                                <td>
                                    <input asp-for="@Model[i].typer" type="checkbox" class="form-control" />
                                </td>
                                <td>
                                    <input asp-for="@Model[i].mklas" type="checkbox" class="form-control" />
                                </td>
                                @if (Model[i].hulpleerlingID != null)
                                {
                                    <td>
                                        <a asp-action="LeerlingOverzicht" asp-route-hulpleerlingId="@Model[i].hulpleerlingID">Wijzig</a>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <a></a>
                                    </td>
                                }
                            </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </body>
    </section>
    <div class="containerDropdowns left-allignToNav tableFixFooter">Totaal: @count</div>
    <input type="submit" class="btn btn-primary mt-md-n2 margin" value="Bevestig">
}
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="LeerlingenOverzicht"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-primary mt-md-n2t @prevDisabled">
    Previous
</a>
<a asp-action="LeerlingenOverzicht"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-primary mt-md-n2 @nextDisabled">
    Next
</a>
